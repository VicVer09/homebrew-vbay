{
  "compilerOptions": {
    "target": "es5",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "importHelpers": true,
    "rootDir": "src",
    "types": ["node"],

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "rules": {
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ]
  }
}
